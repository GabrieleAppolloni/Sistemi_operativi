retry_sem:
 sem = semget(KEY,1,IPC_CREAT|0666);
 if(sem < 0){
  if(errno == EINTR) goto retry_sem;
  perror("errore semget");
  exit(-1);
 }

retry_ctl:
 int sem_c = semctl(sem,0,SETVAL,1);
 if(sem_c < 0){
  if(errno == EINTR) goto retry_ctl;
  perror("errore semctl");
  exit(-1);
