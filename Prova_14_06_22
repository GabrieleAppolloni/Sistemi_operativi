retry_mmap:
 void* mem=mmap(NULL,sizeof(int),PROT_READ|PROT_WRITE,MAP_SHARED|MAP_ANONYMOUS,-1,0);
 if(mem == NULL){
  if(errno == EINTR) goto retry_mmap;
   perror("errore mmap");
