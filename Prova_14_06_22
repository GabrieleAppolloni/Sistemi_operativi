#define SIZE 256
#define KEY 15

struct sembuf s_b;
int indice;
pid_t pid; 
char **file;
char **string;
//int **pipes;
char** backup;

void gestore(int signum) {
    if (signum != SIGINT) return;

    FILE *orig = file[indice];
    FILE *dest = fopen(backup[indice], "w");

    if (dest == NULL || orig == NULL) {
        perror("Errore apertura file nel gestore");
        exit(EXIT_FAILURE);
    }

    char buffer[SIZE];

    // Torna all'inizio del file di origine prima di copiare
    fseek(orig, 0, SEEK_SET);

    while (fgets(buffer, SIZE, orig) != NULL) {
        fputs(buffer, dest);
    }

    fclose(dest);

    printf("ðŸŸ¢ Figlio [%d]: Backup salvato in '%s'\n", getpid(), backup[indice]);

}

